<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Funding</base>
  <class>FundingCaseType</class>
  <name>civicrm_funding_case_type</name>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique FundingCaseType ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>title</name>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <html>
      <type>Text</type>
    </html>
  </field>
  <index>
    <name>index_title</name>
    <fieldName>title</fieldName>
    <unique>true</unique>
  </index>

  <field>
    <name>abbreviation</name>
    <type>varchar</type>
    <length>20</length>
    <required>true</required>
    <dataPattern>/^[\p{L}\p{N}\p{P}]+$/u</dataPattern>
    <comment>Used in application process identifiers</comment>
    <html>
      <type>Text</type>
    </html>
  </field>
  <index>
    <name>index_abbreviation</name>
    <fieldName>abbreviation</fieldName>
    <unique>true</unique>
  </index>

  <field>
    <name>name</name>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>is_summary_application</name>
    <type>boolean</type>
    <required>true</required>
    <html>
      <type>CheckBox</type>
    </html>
  </field>

  <field>
    <name>application_process_label</name>
    <type>varchar</type>
    <length>255</length>
    <comment>Used for summary applications</comment>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>properties</name>
    <type>text</type>
    <required>false</required>
    <serialize>JSON</serialize>
    <html>
      <type>TextArea</type>
    </html>
  </field>
</table>
