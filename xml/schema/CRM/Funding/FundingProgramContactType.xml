<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Funding</base>
  <class>FundingProgramContactType</class>
  <name>civicrm_funding_program_contact_type</name>
  <comment>Defines who is allowed to access a funding program</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique FundingProgramContactType ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>funding_program_id</name>
    <type>int unsigned</type>
    <comment>FK to FundingProgram</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <foreignKey>
    <name>funding_program_id</name>
    <table>civicrm_funding_program</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>contact_type_id</name>
    <type>int unsigned</type>
    <comment>FK to ContactType</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <foreignKey>
    <name>contact_type_id</name>
    <table>civicrm_contact_type</table>
    <key>id</key>
    <onDelete>RESTRICT</onDelete>
  </foreignKey>

  <field>
    <name>relationship_type_id</name>
    <type>int unsigned</type>
    <comment>FK to RelationshipType</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <foreignKey>
    <name>relationship_type_id</name>
    <table>civicrm_relationship_type</table>
    <key>id</key>
    <onDelete>RESTRICT</onDelete>
  </foreignKey>

</table>
