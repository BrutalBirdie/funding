<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Funding</base>
  <class>ApplicationCostItem</class>
  <!--
    "application" is shortened to "app" in the table name to be consistent with
    FundingApplicationResourcesItem (see comment there).
  -->
  <name>civicrm_funding_app_cost_item</name>
  <log>true</log>

  <field>
    <name>id</name>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <comment>Unique FundingApplicationCostItem ID</comment>
    <html>
      <type>Text</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
  </primaryKey>

  <field>
    <name>application_process_id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>FK to FundingApplicationProcess</comment>
  </field>
  <foreignKey>
    <name>application_process_id</name>
    <table>civicrm_funding_application_process</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>type</name>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>amount</name>
    <type>decimal(10,2)</type>
    <required>true</required>
    <crmType>CRM_Utils_Type::T_MONEY</crmType>
    <dataPattern>/^\d{1,10}(\.\d{2})?$/</dataPattern>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>properties</name>
    <type>text</type>
    <required>true</required>
    <serialize>JSON</serialize>
  </field>
</table>
