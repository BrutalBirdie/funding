<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Funding</base>
  <class>FundingCaseContact</class>
  <name>civicrm_funding_case_contact</name>
  <comment>Stores which permissions a contact or a related contact has on a funding case</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique FundingCaseContact ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>funding_case_id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>FK to FundingCase</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <foreignKey>
    <name>funding_case_id</name>
    <table>civicrm_funding_case</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>contact_id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>FK to Contact</comment>
  </field>
  <foreignKey>
    <name>contact_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>relationship_type_id</name>
    <type>int unsigned</type>
    <comment>FK to RelationshipType</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <foreignKey>
    <name>relationship_type_id</name>
    <table>civicrm_relationship_type</table>
    <key>id</key>
    <onDelete>RESTRICT</onDelete>
  </foreignKey>

  <field>
    <name>relationship_direction</name>
    <type>char</type>
    <length>3</length>
    <pseudoconstant>
      <callback>Civi\Funding\FundingPseudoConstants::getRelationshipTypeDirections</callback>
    </pseudoconstant>
    <html>
      <type>Select</type>
    </html>
  </field>

  <field>
    <name>permissions</name>
    <type>text</type>
    <required>true</required>
    <serialize>JSON</serialize>
    <html>
      <type>TextArea</type>
    </html>
  </field>

</table>
